<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.absurd.circle.ui.activity.UserProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <ImageView
                    android:id="@+id/iv_user_profile_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user_background"/>
                <FrameLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:background="#70000000"
                    android:layout_height="80dp">
                </FrameLayout>
                <ImageView
                    android:id="@+id/iv_user_profile_avatar"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="27dp"/>
                <TextView
                    android:id="@+id/tv_user_profile_level"
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_alignRight="@id/iv_user_profile_avatar"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"

                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tv_user_profile_username"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="45dp"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"
                    android:layout_toRightOf="@id/iv_user_profile_avatar"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/iv_user_profile_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/user_profile_male"/>
                <TextView
                    android:id="@+id/tv_user_profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_user_profile_sex"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"/>
                <TextView
                    android:id="@+id/tv_user_profile_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/iv_user_profile_avatar"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"
                    android:text="关注     粉丝      动态"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llyt_user_profile_bottom_bar"
                android:background="#ffffffff"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/llyt_bar_btn_add_follow"
                    android:background="@drawable/sel_actionbar_home_btn"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.0"
                    android:clickable="true">
                    <TextView android:textColor="#ff999999"
                              android:gravity="center"
                              android:id="@+id/tv_btn_add_follow"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="6.0dip"
                              android:text="添加关注" />
                </LinearLayout>
                <View android:background="#ff999999"
                      android:layout_width="0.5dip"
                      android:layout_marginTop="4dp"
                      android:layout_marginBottom="4dp"
                      android:layout_height="match_parent" />
                <LinearLayout android:gravity="center"
                              android:id="@+id/llyt_bar_btn_send_message"
                              android:background="@drawable/sel_actionbar_home_btn"
                              android:layout_width="0.0dip"
                              android:layout_height="fill_parent"
                              android:layout_weight="3.0"
                              android:clickable="true">
                    <TextView
                        android:textColor="#ff999999"
                        android:gravity="center"
                        android:id="@+id/tv_btn_send_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:text="发送消息" />
                </LinearLayout>
            </LinearLayout>
            <View android:background="#ff999999"
                  android:layout_alignParentBottom="true"
                  android:layout_width="match_parent"
                  android:layout_height="0.8dp"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="圈圈号"/>
                    <TextView
                        android:id="@+id/tv_user_profile_id"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View android:layout_height="0.6dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="2dp"
                      android:background="#ff999999"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="个性签名"/>
                    <TextView
                        android:id="@+id/tv_user_profile_description"
                        style="@style/UserProfileContent"/>
                </LinearLayout>
                <View android:layout_height="0.6dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="2dp"
                      android:background="#ff999999"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="兴趣爱好"/>
                    <TextView
                        android:id="@+id/tv_user_profile_interest"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View android:layout_height="0.6dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="2dp"
                      android:background="#ff999999"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="职业"/>
                    <TextView
                        android:id="@+id/tv_user_profile_job"
                        style="@style/UserProfileContent"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View android:layout_height="0.6dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="2dp"
                      android:background="#ff999999"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="不良记录"/>
                    <TextView
                        android:id="@+id/tv_user_profile_bad_record"
                        style="@style/UserProfileContent"
                        android:text="无 (注:被成功举报三次将永久封禁设备)"/>
                </LinearLayout>
                <View android:layout_height="0.6dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="2dp"
                      android:background="#ff999999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看TA的动态"
                    android:textColor="@color/theme_color"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="onUserDynamicClick"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
