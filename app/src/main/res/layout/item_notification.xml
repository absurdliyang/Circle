<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_notify_item_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_notify_item_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_notify_item_username"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textSize="15dp"
                      android:textStyle="bold"
                      android:text="username"/>
            <TextView
                android:id="@+id/tv_notify_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="2 分钟前"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_notify_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="13dp"
            android:text="description"/>

        <TextView android:id="@+id/tv_notify_item_content"
                  android:layout_marginTop="6dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:singleLine="true"
                  android:textSize="13dp"
                  android:text="content"/>
    </LinearLayout>
</RelativeLayout>