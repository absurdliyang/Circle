<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <ImageView
                    android:id="@+id/iv_my_profile_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user_background"/>
                <FrameLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:background="#70000000"
                    android:layout_height="80dp">
                </FrameLayout>
                <ImageView
                    android:id="@+id/iv_my_profile_avatar"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/tv_my_profile_username"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="45dp"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"
                    android:layout_toRightOf="@id/iv_my_profile_avatar"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/iv_my_profile_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/user_profile_male"/>
                <TextView
                    android:id="@+id/tv_my_profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_my_profile_sex"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"/>
                <TextView
                    android:id="@+id/tv_my_profile_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/iv_my_profile_avatar"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="16dp"
                    android:textColor="#ffffffff"
                    android:text="关注     粉丝      动态"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    style="@style/ProfileEdit">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="圈圈号"/>
                    <TextView
                        android:id="@+id/tv_my_profile_id"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_nickname">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="昵称"/>
                    <TextView
                        android:id="@+id/tv_my_profile_nickname"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_description">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="个性签名"/>
                    <TextView
                        android:id="@+id/tv_my_profile_description"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_birthday">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="出生日期"/>
                    <TextView
                        android:id="@+id/tv_my_profile_birthday"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_sex">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="性别"/>
                    <TextView
                        android:id="@+id/tv_my_profile_sex"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_phone">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="手机"/>
                    <TextView
                        android:id="@+id/tv_my_profile_phone"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_interest">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="兴趣爱好"/>
                    <TextView
                        android:id="@+id/tv_my_profile_interest"
                        android:layout_alignParentRight="true"
                        style="@style/UserProfileContent"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <RelativeLayout
                    style="@style/ProfileEdit"
                    android:clickable="true"
                    android:onClick="onProfileItemClick"
                    android:id="@+id/btn_item_my_profile_job">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="职业"/>
                    <TextView
                        android:id="@+id/tv_my_profile_job"
                        style="@style/UserProfileContent"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View style="@style/DividerLine"/>
                <!--
                <RelativeLayout
                    style="@style/ProfileEdit">
                    <TextView
                        style="@style/UserProfileLabel"
                        android:text="不良记录"/>
                    <TextView
                        android:id="@+id/tv_my_profile_bad_record"
                        style="@style/UserProfileContent"
                        android:text="无 (注:被成功举报三次将永久封禁设备)"/>
                </RelativeLayout>
                <View android:layout_height="0.6dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="2dp"
                      android:background="#ff999999"/>
-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的动态"
                    android:textColor="@color/theme_color"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="onMyDynamicClick"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>