<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.absurd.circle.ui.activity.DiscoveryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <ImageView
            android:id="@+id/iv_friendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/sel_friendmessages_btn"/>
        <ImageView
            android:id="@+id/iv_nearpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/sel_nearpeople_btn"/>
        <ImageView
            android:id="@+id/iv_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/sel_superman_btn"/>
    </LinearLayout>


</RelativeLayout>
