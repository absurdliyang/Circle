<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_page_bg"
    tools:context="com.absurd.circle.ui.activity.LoginActivity">

    <TextView
        android:id="@+id/tv_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/start_text"
        android:textColor="#ffffffff"
        android:textSize="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/tv_start_text"
        android:text="@string/start_title"
        android:textColor="#ffffffff"
        android:textSize="20dp"/>
    <com.sina.weibo.sdk.widget.LoginoutButton
        android:layout_centerHorizontal="true"
        android:id="@+id/lbtn_weibo_login"
        android:background="@drawable/weibo_auth_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_qq_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qq_login_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        />
    <CheckBox
        android:id="@+id/cb_is_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="分享给好友并关注圈圈官博"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/start_hint"
        android:textColor="#ffffffff"/>
</RelativeLayout>
