<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.absurd.circle.ui.activity.ContactActivity">

    <com.absurd.circle.ui.indicator.TabPageIndicator
        android:id="@+id/tpi_contact"
        android:background="@drawable/custom_tab_indicator_divider"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_contact"
        android:layout_below="@id/tpi_contact"
        android:layout_width="match_parent"
        android:layout_height="470dp"/>

</RelativeLayout>
