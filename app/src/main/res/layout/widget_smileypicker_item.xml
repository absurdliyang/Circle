<?xml version="1.0" encoding="utf-8"?>
<com.absurd.circle.ui.view.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:padding="3.0dip"
    android:background="@drawable/ab_bottom_solid_inverse_holo"
    android:layout_width="@dimen/emotion_bg_size"
    android:layout_height="@dimen/emotion_bg_size"
    android:minWidth="@dimen/emotion_bg_size"
    android:minHeight="@dimen/emotion_bg_size"
    >

    <ImageView
        android:visibility="invisible"
        android:layout_gravity="center"
        android:id="@+id/smiley_item"
        android:layout_width="@dimen/emotion_size"
        android:layout_height="@dimen/emotion_size"/>

    <TextView
        android:visibility="invisible"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:id="@+id/smiley_text_item"
        android:layout_width="@dimen/emotion_size"
        android:layout_height="@dimen/emotion_size"/>
</com.absurd.circle.ui.view.SquareFrameLayout>