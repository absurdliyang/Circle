<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_nearbyuser_item_num"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="17dp"
        android:textColor="@color/theme_color"
        />
    <ImageView
        android:id="@+id/iv_nearbyuser_item_avatar"
        android:layout_toRightOf="@id/tv_nearbyuser_item_num"
        android:layout_marginLeft="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_nearbyuser_item_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_nearbyuser_item_username"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:singleLine="true"
                      android:layout_marginRight="5dp"
                      android:textSize="16dp"
                      android:textStyle="bold"
                      android:text="username"/>
            <TextView
                android:id="@+id/tv_nearbyuser_item_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="13dp"
                android:textColor="#ffa3a1a3"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_nearbyuser_item_sex"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_profile_male"
                />
            <TextView
                android:id="@+id/tv_nearbyuser_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="13dp"
                android:textColor="#ffa3a1a3"
                />

        </LinearLayout>

        <TextView android:id="@+id/tv_nearbyuser_item_desc"
                  android:layout_marginTop="4dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:singleLine="true"
                  android:textSize="13dp"
                  android:textColor="#ffa3a1a3"
                  android:text="description"/>
    </LinearLayout>
</RelativeLayout>